{
  "name": "versatil-sdlc-framework",
  "version": "1.0.0",
  "description": "AI-Native Software Development Lifecycle Framework with BMAD Methodology and Specialized Agents",
  "main": "index.js",
  "types": "src/index.ts",
  "bin": {
    "versatil": "./bin/versatil.js",
    "versatil-mcp": "./bin/versatil-mcp.js",
    "versatil-sdlc": "./index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node dist/framework-integration-tester.js",
    "validate": "npm run lint && npm run test && npm run build",
    "health-check": "node dist/index.js --health-check",
    "init": "node scripts/setup-agents.js",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "ai-native",
    "sdlc",
    "development-framework",
    "agents",
    "bmad",
    "cursor-ai",
    "mcp",
    "quality-assurance",
    "automation"
  ],
  "author": "VERSATIL Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/versatil-platform/versatil-sdlc-framework.git"
  },
  "bugs": {
    "url": "https://github.com/versatil-platform/versatil-sdlc-framework/issues"
  },
  "homepage": "https://github.com/versatil-platform/versatil-sdlc-framework#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/node": "^20.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "semver": "^7.5.4",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript-eslint": "^8.44.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/",
    "src/",
    "scripts/",
    "templates/",
    "docs/",
    "examples/",
    ".versatil/",
    ".cursorrules",
    "CLAUDE.md",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ]
}
