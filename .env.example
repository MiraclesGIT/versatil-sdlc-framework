# VERSATIL SDLC Framework - Environment Configuration Example
# Copy this file to .env and configure your values

# Framework Configuration
NODE_ENV=development
LOG_LEVEL=info
DEBUG_MODE=false

# MCP Integration
MCP_SERVER_PORT=3001
MCP_ENABLED=true

# Agent Configuration
AGENT_AUTO_ACTIVATION=true
AGENT_CONTEXT_VALIDATION=true
ENHANCED_AGENTS_ENABLED=true

# Quality Gates
QUALITY_THRESHOLD=80
TEST_COVERAGE_MINIMUM=85
CONFIGURATION_HEALTH_MINIMUM=95
NAVIGATION_HEALTH_MINIMUM=100
SECURITY_SCORE_MINIMUM=90

# Performance Monitoring
PERFORMANCE_MONITORING=true
PERFORMANCE_ALERTS=true
METRICS_RETENTION_DAYS=7

# GitHub Integration (Optional)
# ⚠️  SECURITY: Replace with your actual GitHub token
GITHUB_TOKEN=<CHANGE_ME_TO_YOUR_GITHUB_TOKEN>
GITHUB_REPO=your_username/your_repo

# Security Configuration
ENABLE_SECURITY_SCANNING=true
BLOCK_DEPLOYMENT_ON_CRITICAL=true

# Development Configuration
AUTO_BACKUP=true
EMERGENCY_RESPONSE=true
COLLABORATION_ENABLED=true

# Analytics & Reporting
ANALYTICS_ENABLED=true
REPORT_GENERATION=true
DASHBOARD_ENABLED=true