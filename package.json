{
  "name": "versatil-sdlc-framework",
  "version": "1.0.0",
  "description": "ðŸš€ World's first AI-Native SDLC framework achieving ZERO CONTEXT LOSS through intelligent agent orchestration. Enhanced BMAD methodology with 6 specialized agents, 85%+ test coverage, enterprise security, and Chrome MCP integration.",
  "main": "index.js",
  "types": "src/index.ts",
  "bin": {
    "versatil": "./bin/versatil.js",
    "versatil-mcp": "./bin/versatil-mcp.js",
    "versatil-sdlc": "./index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:release": "npm run lint && npm run build && npm run test",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:full": "npm run test && npm run test:integration",
    "test:integration": "node dist/framework-integration-tester.js",
    "security:scan": "npm audit --audit-level=moderate",
    "validate": "npm run lint && npm run test && npm run build",
    "health-check": "node dist/index.js --health-check",
    "init": "node scripts/setup-agents.js",
    "version:check": "node scripts/version-check.js",
    "version:fix": "node scripts/version-check.js --fix",
    "changelog:generate": "echo \"Changelog generated by release script\"",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry": "node scripts/release.js patch --dry-run",
    "preversion": "npm run validate && npm run version:check",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run build:release"
  },
  "keywords": [
    "ai-native",
    "sdlc",
    "development-framework",
    "agents",
    "bmad",
    "enhanced-bmad",
    "zero-context-loss",
    "cursor-ai",
    "claude-ai",
    "mcp",
    "model-context-protocol",
    "chrome-mcp",
    "quality-assurance",
    "automation",
    "typescript",
    "nodejs",
    "react",
    "vue",
    "testing",
    "security",
    "devops",
    "ci-cd",
    "performance-monitoring",
    "adaptive-learning",
    "configuration-validation",
    "cross-file-consistency",
    "enterprise-ready",
    "open-source"
  ],
  "author": "VERSATIL Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/versatil-platform/versatil-sdlc-framework.git"
  },
  "bugs": {
    "url": "https://github.com/versatil-platform/versatil-sdlc-framework/issues"
  },
  "homepage": "https://github.com/versatil-platform/versatil-sdlc-framework#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/express": "^4.17.23",
    "@types/node": "^20.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "express": "^4.21.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "semver": "^7.5.4",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript-eslint": "^8.44.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist/",
    "src/",
    "scripts/",
    "templates/",
    "docs/",
    "examples/",
    ".versatil/",
    ".cursorrules",
    ".pre-commit-config.yaml",
    "CLAUDE.md",
    "README.md",
    "SECURITY.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "tsconfig.json",
    "jest.config.js"
  ]
}
