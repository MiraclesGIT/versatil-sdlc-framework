# VERSATIL SDLC Framework - Enterprise Environment Configuration
# Marcus-Backend Environment Variables

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Application Security
JWT_SECRET=<CHANGE_ME_TO_YOUR_JWT_SECRET_32_CHARACTERS_MINIMUM>
ENCRYPTION_KEY=<CHANGE_ME_TO_YOUR_32_CHARACTER_ENCRYPTION_KEY>
SESSION_SECRET=<CHANGE_ME_TO_YOUR_SESSION_SECRET>

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://versatil_user:<CHANGE_ME>@database:5432/versatil

# Individual Database Settings
DB_HOST=database
DB_PORT=5432
DB_NAME=versatil
DB_USER=versatil_user
DB_PASSWORD=<CHANGE_ME_TO_YOUR_DB_PASSWORD>

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=<CHANGE_ME_TO_YOUR_REDIS_PASSWORD>
REDIS_DB=0

# Session Store
SESSION_STORE=redis
SESSION_TTL=86400

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Application Monitoring
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100m
LOG_MAX_FILES=5

# Grafana Configuration
GRAFANA_PASSWORD=<CHANGE_ME_TO_YOUR_GRAFANA_PASSWORD>
GRAFANA_URL=http://grafana:3000

# Prometheus Configuration
PROMETHEUS_URL=http://monitoring:9090

# ==============================================
# SECURITY SETTINGS
# ==============================================

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100        # requests per window
RATE_LIMIT_ENABLED=true

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=<CHANGE_ME_TO_YOUR_SMTP_PASSWORD>
EMAIL_FROM=noreply@yourdomain.com

# Cloud Storage (AWS S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<CHANGE_ME_TO_YOUR_AWS_ACCESS_KEY_ID>
AWS_SECRET_ACCESS_KEY=<CHANGE_ME_TO_YOUR_AWS_SECRET_ACCESS_KEY>
S3_BUCKET=versatil-uploads
S3_ENDPOINT=https://s3.amazonaws.com

# Content Delivery Network
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_URL=https://assets.yourdomain.com

# ==============================================
# MESSAGE QUEUE (Optional)
# ==============================================
RABBITMQ_URL=amqp://versatil:password@rabbitmq:5672
RABBITMQ_USER=versatil
RABBITMQ_PASSWORD=<CHANGE_ME_TO_YOUR_RABBITMQ_PASSWORD>

# Queue Configuration
QUEUE_ENABLED=true
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# ==============================================
# TESTING CONFIGURATION (Maria-QA)
# ==============================================

# Test Database
TEST_DATABASE_URL=postgresql://versatil_user:<CHANGE_ME>@database:5432/versatil_test

# Chrome MCP Testing
CHROME_MCP_ENABLED=true
CHROME_MCP_URL=http://chrome-mcp:3000
BROWSER_TIMEOUT=30000

# Testing Thresholds
TEST_COVERAGE_THRESHOLD=80
PERFORMANCE_BUDGET_FCP=1800
PERFORMANCE_BUDGET_LCP=2500
PERFORMANCE_BUDGET_FID=100
PERFORMANCE_BUDGET_CLS=0.1

# Visual Testing
VISUAL_TESTING_ENABLED=true
VISUAL_DIFF_THRESHOLD=0.1
VISUAL_BASELINE_PATH=/app/tests/visual/baselines

# ==============================================
# CI/CD CONFIGURATION
# ==============================================

# Jenkins Configuration
JENKINS_ENABLED=false
JENKINS_URL=http://jenkins:8080
JENKINS_USER=admin
JENKINS_TOKEN=<CHANGE_ME_TO_YOUR_JENKINS_API_TOKEN>

# GitHub Integration
GITHUB_TOKEN=<CHANGE_ME_TO_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN>
GITHUB_WEBHOOK_SECRET=<CHANGE_ME_TO_YOUR_WEBHOOK_SECRET>

# Docker Registry
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your-registry-username
DOCKER_PASSWORD=<CHANGE_ME_TO_YOUR_DOCKER_PASSWORD>

# ==============================================
# BUSINESS LOGIC (Alex-BA)
# ==============================================

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_A_B_TESTING=false
FEATURE_ADVANCED_METRICS=true
FEATURE_AI_RECOMMENDATIONS=false

# Business Metrics
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google-analytics
ANALYTICS_TRACKING_ID=GA_MEASUREMENT_ID

# User Management
USER_REGISTRATION_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=true
PASSWORD_RESET_TOKEN_TTL=3600
MAX_LOGIN_ATTEMPTS=5

# ==============================================
# AI/ML CONFIGURATION (Dr.AI-ML)
# ==============================================

# Machine Learning Services
ML_ENABLED=false
ML_API_URL=http://localhost:5000
ML_API_KEY=<CHANGE_ME_TO_YOUR_ML_API_KEY>

# Model Configuration
MODEL_INFERENCE_TIMEOUT=10000
MODEL_BATCH_SIZE=32
MODEL_CACHE_TTL=3600

# Data Processing
DATA_PROCESSING_ENABLED=false
DATA_WAREHOUSE_URL=your-data-warehouse-connection
ETL_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Development Mode
DEBUG=false
DEBUG_LEVEL=info
HOT_RELOAD=false

# Development Database
DEV_DATABASE_URL=postgresql://versatil_user:password@localhost:5432/versatil_dev

# Development Testing
DEV_SKIP_AUTH=false
DEV_MOCK_SERVICES=false
DEV_SEED_DATABASE=false

# ==============================================
# BACKUP & DISASTER RECOVERY
# ==============================================

# Database Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=versatil-backups

# Application Backups
APP_BACKUP_ENABLED=true
CONFIG_BACKUP_ENABLED=true
LOGS_BACKUP_ENABLED=true

# ==============================================
# COMPLIANCE & GOVERNANCE
# ==============================================

# Data Privacy
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years
PERSONAL_DATA_ENCRYPTION=true

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=info
SECURITY_EVENT_LOGGING=true

# Compliance Reporting
COMPLIANCE_REPORTS_ENABLED=true
COMPLIANCE_REPORT_SCHEDULE=0 1 1 * *  # Monthly

# ==============================================
# CUSTOM ENVIRONMENT VARIABLES
# ==============================================

# Add your custom environment variables here
# CUSTOM_API_KEY=<CHANGE_ME_TO_YOUR_CUSTOM_API_KEY>
# CUSTOM_SERVICE_URL=https://your-service.com
# CUSTOM_FEATURE_FLAG=true